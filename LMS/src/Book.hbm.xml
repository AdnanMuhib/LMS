<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="application.model.Book" table="Book">  
    <id name="id"
    column="id" 
    unsaved-value="0"
    >  
     <generator class="native"></generator>  
    </id>  
            
    <property name="book_title"></property>  
    <property name="author_name"></property>
    <property name="ISBN"></property>
    <property name="book_edition"></property>  
    <property name="publish_year"></property> 
    <property name="quantity"></property>  
    <property name="category"></property>
    <property name="location"></property>  
            
  </class>  
            
 </hibernate-mapping>  